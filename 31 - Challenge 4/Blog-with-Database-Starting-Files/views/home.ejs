<%- include("partials/header") %>
<h1>Home</h1>

<p><%= startingContent %></p>

<% posts.forEach(function(post) { %>
    <h2><%= post.title %></h2>
    <p>
      <% if (post.content) { %>
        <span><%= post.content.substring(0, 150) %>...</span>
        <a href="/posts/<%= _.lowerCase(post.title) %>" style="margin-left: 10px;">Read More</a>
      <% } else { %>
        No content available.
      <% } %>
    </p>
<% }); %>

<%- include("partials/footer") %>
